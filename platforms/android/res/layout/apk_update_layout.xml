<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/update_img" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/update_frame_bg"
      android:orientation="vertical"
      android:paddingBottom="20dp"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:paddingTop="10dp">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新版本升级"
        android:textColor="#333333"
        android:textSize="15sp"
        android:visibility="gone" />

      <TextView
        android:id="@+id/update_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.4"
        android:paddingBottom="15dp"
        android:text="1.xxxxx\n2.xxxxx\n3.xxxxx\n4.xxxxx\n5.xxxxx"
        android:textColor="#666666"
        android:textSize="13sp" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/updae_cancel"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_marginRight="19dp"
          android:layout_weight="3"
          android:background="@drawable/update_cancel_bg"
          android:gravity="center"
          android:padding="10dp"
          android:text="先看看，暂不升级"
          android:textColor="#666666"
          android:textSize="13sp" />

        <TextView
          android:id="@+id/update_confirm"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_weight="2"
          android:background="@drawable/update_confirm_bg"
          android:gravity="center"
          android:padding="10dp"
          android:text="立即升级"
          android:textColor="#ffffff"
          android:textSize="13sp" />
      </LinearLayout>
    </LinearLayout>

  </LinearLayout>
</RelativeLayout>
